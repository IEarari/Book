<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:id="@+id/activity"
    tools:context=".BookListActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="0dp"
                >
            <EditText
                android:id="@+id/search_field"
                android:inputType="text"
                android:hint="@string/search_field_label"
                android:textColorHint="@color/book_search_hint"
                android:cursorVisible="false"
                android:textColor="@color/book_search_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/search_field_left_margin"
                android:layout_marginStart="@dimen/search_field_right_margin"
                android:imeOptions="actionSearch"
                android:singleLine="true"
                />
            </LinearLayout>
            <LinearLayout
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="0dp"
               >
                <TextView
                    android:id="@+id/max_results_label"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/book_search_text"
                    android:textSize="12sp"
                    android:gravity="center_horizontal"
                    android:layout_marginEnd="@dimen/book_list_right_margin"
                    android:text="@string/search_max_results_spinner_label"
                    />

                <Spinner
                    android:id="@+id/max_results_spinner"
                    android:layout_width="75dp"
                    android:layout_height="24dp"
                    android:entries="@array/max_results"
                    android:background="@color/colorPrimary"
                 />
            </LinearLayout>
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>
    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <fragment
            android:id="@+id/fragment"
            android:tag="booksList"
            android:name="rocks.athrow.android_book_listing_app.BookListFragment"
            tools:layout="@layout/fragment_booklist_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </FrameLayout>
</android.support.design.widget.CoordinatorLayout>